<Window x:Class="Projekt_Systemy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt_Systemy"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/src/background.png"/>
        </Grid.Background>
        <Canvas x:Name="canvas">
            <Button Content="Start" Canvas.Left="10" Canvas.Top="10" Width="75" Click="buttonStart"/>
            <Image x:Name="pociag" Height="300" Canvas.Left="660" Canvas.Top="-300" Width="50" Source="/src/pociag.png" Stretch="Fill"/>
            <Image x:Name="car1" Height="50" Canvas.Left="-50" Canvas.Top="110" Width="50" Source="/src/car_blue.png" Stretch="Fill"/>
            <Image x:Name="light" Height="90" Canvas.Left="720" Canvas.Top="340" Width="60" Source="/src/brak.png" Stretch="Fill"/>
        </Canvas>
    </Grid>
</Window>
